{
  "name": "toko-kita",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently -n client,server -c green,blue \"pnpm -C client dev\" \"pnpm dev:server\"",
    "dev:client": "pnpm -C client dev",
    "dev:server": "tsx watch server/src/index.ts",
    "build": "pnpm -C client build && tsc -p server/tsconfig.json",
    "start": "node server/dist/index.js",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx script/seed.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  }
}
